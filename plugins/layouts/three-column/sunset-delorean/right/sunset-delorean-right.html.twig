{#
/**
 * @file
 * Template for a complex column panel layout.
 *
 * This template provides a complex column panel display layout, with
 * each column roughly equal in width.
 *
 * Variables:
 * - $id: An optional CSS id to use for the layout.
 * - $content: An array of content, each item in the array is keyed to one
 *   panel of the layout. This layout supports the following sections:
 *   - $content['first']: Content in the left column.
 *   - $content['second']: Content in the right column.
 */
#}
<main class="layout--sunset-delorean--right">
  <section>
    <header>
      {{ content.header }}
    </header>
    <div class="grid-collapse">
      <div class="column--first-first">
        {{ content.first }}
      </div>

      <div class="column--first-second">
          {{ content.second }}
      </div>
    </div>

  </section>

  <!-- The left sidebar //-->
  <aside>
    {{ content.third }}
  </aside>

</main>
